    <!-- Cài đặt viewport để trang web hiển thị tốt trên mọi thiết bị (điện thoại, máy tính bảng) -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Tiêu đề của trang web, hiển thị trên tab trình duyệt -->
    <title>Lá Thư Từ Gemini</title>

    <!-- Đoạn mã CSS này dùng để trang trí cho trang web -->
    <style>
        /* CSS cho toàn bộ body của trang */
        body {
            font-family: 'Times New Roman', serif; /* Font chữ cổ điển hơn cho lá thư */
            background-color: #f0f0e0; /* Màu nền giống giấy da */
            color: #333; /* Màu chữ chính */
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center; /* Căn giữa nội dung theo chiều ngang */
            align-items: center; /* Căn giữa nội dung theo chiều dọc */
            min-height: 100vh; /* Chiều cao tối thiểu bằng chiều cao viewport */
            flex-direction: column;
            position: relative; /* Thêm position relative để căn chỉnh creatorText */
        }
        
        /* CSS cho phần nội dung chính */
        .container {
            text-align: center; /* Căn giữa các thành phần bên trong */
            background-color: #fff8e1; /* Màu nền trắng ngà cho khối nội dung */
            padding: 50px; /* Tăng khoảng trống bên trong */
            border-radius: 5px; /* Bo tròn các góc ít hơn để giống lá thư */
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.15); /* Hiệu ứng đổ bóng mạnh hơn */
            max-width: 90%; /* Giới hạn chiều rộng trên màn hình nhỏ */
            width: 600px;
        }

        /* CSS cho đoạn văn bản lá thư */
        #greetingText {
            font-size: 1.2rem;
            line-height: 1.8;
            min-height: 150px; /* Thêm chiều cao tối thiểu để tránh layout bị thay đổi */
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            text-align: left; /* Căn lề trái để giống một lá thư */
            border-top: 1px solid #d7ccc8;
            border-bottom: 1px solid #d7ccc8;
            margin: 20px 0;
        }

        /* CSS cho nhóm nút */
        .button-group {
            display: flex;
            justify-content: center;
            gap: 10px; /* Khoảng cách giữa các nút */
            margin-top: 20px;
        }

        /* CSS cho nút bấm */
        button {
            background-color: #8d6e63; /* Màu nâu nhạt */
            color: white; /* Chữ màu trắng */
            border: none;
            padding: 15px 40px; /* Kích thước nút */
            font-size: 1.1rem;
            font-weight: bold;
            border-radius: 5px; /* Bo tròn các góc */
            cursor: pointer; /* Hiển thị biểu tượng con trỏ khi di chuột */
            transition: all 0.3s ease; /* Thêm hiệu ứng chuyển màu và kích thước mượt mà */
            box-shadow: 2px 5px rgba(0,0,0,0.2);
            text-transform: uppercase; /* Chữ in hoa */
        }

        /* Thay đổi màu nền nút khi di chuột vào */
        button:hover {
            background-color: #795548;
        }

        /* CSS để ẩn phần tử */
        .hidden {
            display: none;
        }

        /* CSS cho màn hình cảm ơn */
        #thankYouScreen {
            display: none;
            text-align: center;
            flex-direction: column; /* Sắp xếp các phần tử con theo chiều dọc */
            justify-content: center; /* Căn giữa nội dung theo chiều dọc */
            align-items: center; /* Căn giữa nội dung theo chiều ngang */
            height: 100vh; /* Chiều cao đầy đủ để căn chỉnh nội dung */
            padding: 20px;
            box-sizing: border-box; /* Tính cả padding vào kích thước */
        }
        #thankYouText {
            font-size: 3rem; /* Kích thước chữ */
            line-height: 1.8;
            text-align: center;
        }
        
        /* CSS cho chữ stk */
        #thankYouText span {
            font-size: 0.8em; /* Giảm kích thước chữ stk nhỏ hơn */
        }
        
