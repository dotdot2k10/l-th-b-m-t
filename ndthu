<body>

    <!-- Đây là phần nội dung chính của trang web -->
    <div id="mainScreen" class="container">
        <!-- Đoạn văn bản mô tả -->
        <p id="greetingText">Hãy nhấn nút "Mở Thư" để đọc nội dung bạn nhé!</p>

        <!-- Nhóm nút bấm -->
        <div class="button-group">
            <button id="geminiButton">
                <span>Mở Thư</span>
            </button>
            <button id="deleteButton" class="hidden">
                <span>dell</span>
            </button>
        </div>
    </div>
    
    <!-- Màn hình cảm ơn mới -->
    <div id="thankYouScreen">
        <p id="thankYouText">Cảm ơn bạn nhiều!<br><span>stk:</span></p>
        <p id="creatorText">create by:dat</p>
    </div>

    <!-- Đoạn mã JavaScript này dùng để thêm tương tác cho trang web -->
    <script>
        // Lấy các đối tượng từ HTML
        const mainScreen = document.getElementById('mainScreen');
        const thankYouScreen = document.getElementById('thankYouScreen');
        const geminiButton = document.getElementById('geminiButton');
        const deleteButton = document.getElementById('deleteButton');
        const greetingText = document.getElementById('greetingText');
        
        // Thêm một biến để lưu trạng thái ban đầu của nút và văn bản
        const originalButtonText = "Mở Thư";
        const originalGreetingText = "Hãy nhấn nút \"Mở Thư\" để đọc nội dung bạn nhé!";
        let isLetterOpen = false; // Biến trạng thái để kiểm tra xem đã mở thư hay chưa
        let okButtonClickCount = 0; // Biến đếm số lần nhấn nút "dell"

        // Mảng chứa các nội dung thư đã được viết sẵn
        const prewrittenLetters = [
            "bạn thân oiiiiiiii! mình quý bạn lắm đó bạn cho mình tiền nạp fifai đi"
        ];

        // Hàm xử lý sự kiện khi nhấn nút Gemini
        function handleGeminiButtonClick() {
            if (isLetterOpen) {
                // Nếu thư đã mở và nút là "Ok", chuyển sang màn hình cảm ơn ngay lập tức
                showThankYouScreen();
            } else {
                // Nếu thư chưa mở, tạo và hiển thị thư
                generateGreeting();
            }
        }

        // Hàm để xử lý sự kiện khi nhấn nút "dell"
        function handleDeleteButtonClick() {
            if (isLetterOpen) {
                // Nếu thư đã mở, tăng biến đếm
                okButtonClickCount++;
                
                // Nếu chưa đủ 6 lần, tăng kích thước nút "Ok"
                if (okButtonClickCount < 6) {
                    const scaleFactor = 1 + okButtonClickCount * 0.5; // Tăng scale factor
                    geminiButton.style.transform = `scale(${scaleFactor})`;
                } else {
                    // Nếu đã nhấn đủ 6 lần, chuyển sang màn hình cảm ơn
                    geminiButton.style.transform = 'scale(1)'; // Reset kích thước nút
                    showThankYouScreen();
                }
            }
        }

        // Hàm để hiển thị lá thư và thay đổi trạng thái
        function generateGreeting() {
            // Lấy nội dung thư
            const randomLetter = prewrittenLetters[0]; // Chỉ có một thư duy nhất
            // Hiển thị nội dung thư lên trang
            greetingText.textContent = randomLetter;
            
            // Đổi văn bản nút sau khi thư đã được mở
            geminiButton.querySelector('span').textContent = "Ok";
            // Hiển thị nút "dell"
            deleteButton.classList.remove('hidden');
            // Cập nhật trạng thái
            isLetterOpen = true;
            okButtonClickCount = 0; // Reset biến đếm khi mở thư mới
            geminiButton.style.transform = 'scale(1)'; // Đảm bảo nút "Ok" có kích thước ban đầu
        }

        // Hàm để hiển thị màn hình cảm ơn
        function showThankYouScreen() {
            mainScreen.style.display = 'none';
            thankYouScreen.style.display = 'flex';
        }

        // Gắn hàm xử lý sự kiện vào các nút
        geminiButton.addEventListener('click', handleGeminiButtonClick);
        deleteButton.addEventListener('click', handleDeleteButtonClick);
    </script>

</body>
</html>
